<% layout('layouts/boilerplate.ejs') %>

    <%- include('../partials/navbar') %>
        <%- include('../partials/flash') %>
        
        <!-- Hero Section for Products -->
        <div class="hero-section">
            <div class="container">
                <div class="hero-content">
                    <h1 class="hero-title">Discover Amazing Products</h1>
                    <p class="hero-subtitle">Find the perfect items from our curated collection</p>
                </div>
            </div>
        </div>
        
        <div class="container">
            <div class="row">
                
        <% for(let item of products) { %>
            <div class="col-lg-4 col-md-6 col-sm-12">
                <!-- mx-auto => for center align -->
                <div class="card shadow mx-auto mt-3 fade-in" style="width: 100%; max-width: 350px;">
                    <div style="position: relative; overflow: hidden; border-radius: 20px 20px 0 0;">
                        <img src="<%=  item.img%>" class="card-img-top" alt="<%=  item.name%>">
                    </div>
                    <div class="card-body">
                        <h2 class="card-title"><%= item.name%></h2>
                        <h5 class="card-title">$<%= item.price%></h5>
                        <p class="card-text"><%= item.desc%></p>
                        
                        <div class="d-flex gap-2 flex-wrap">
                            <a href="/products/<%=item._id%>" class="btn btn-primary flex-fill">
                                <i class="fas fa-eye me-2"></i>View Details
                            </a>
                            <% if(currentUser && currentUser.role==='seller' ) { %>
                                <form class="flex-fill" action="/products/<%=item._id%>?_method=DELETE" method="post">
                                    <button class="btn btn-danger w-100">
                                        <i class="fas fa-trash me-2"></i>Delete
                                    </button>
                                </form>
                            <% } %>
                        </div>
                   </div>
                </div>
            </div>
            <% } %>

    </div>
        </div>
    
    </body>

    </html>