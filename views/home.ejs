<% layout('layouts/boilerplate.ejs') %>

    <%- include('partials/navbar') %>
        <%- include('partials/flash') %>

            <!-- Hero Section -->
            <section class="hero-section">
                <div class="container">
                    <div class="hero-content">
                        <h1 class="hero-title">Welcome to ShopEase</h1>
                        <p class="hero-subtitle">Discover amazing products from trusted sellers worldwide</p>
                        <div class="hero-cta">
                            <% if(currentUser) { %>
                                <a href="/products" class="btn btn-light btn-lg me-3">
                                    <i class="fas fa-shopping-bag me-2"></i>Shop Now
                                </a>
                                <% if(currentUser.role==='seller' ) { %>
                                    <a href="/product/new" class="btn btn-outline-light btn-lg">
                                        <i class="fas fa-plus me-2"></i>Add Product
                                    </a>
                                    <% } %>
                                        <% } else { %>
                                            <a href="/register" class="btn btn-light btn-lg me-3">
                                                <i class="fas fa-user-plus me-2"></i>Get Started
                                            </a>
                                            <a href="/login" class="btn btn-outline-light btn-lg">
                                                <i class="fas fa-sign-in-alt me-2"></i>Sign In
                                            </a>
                                            <% } %>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Features Section -->
            <section class="features-section">
                <div class="container">
                    <div class="text-center mb-5">
                        <h2 class="display-4 fw-bold mb-4">Why Choose ShopEase?</h2>
                        <p class="lead text-muted">Experience the best of online shopping with our unique features</p>
                    </div>

                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="feature-card">
                                <div class="feature-icon">
                                    <i class="fas fa-shield-alt"></i>
                                </div>
                                <h3 class="h4 fw-bold mb-3">Secure Shopping</h3>
                                <p class="text-muted">Shop with confidence knowing your data and transactions are
                                    protected with industry-leading security measures.</p>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="feature-card">
                                <div class="feature-icon">
                                    <i class="fas fa-shipping-fast"></i>
                                </div>
                                <h3 class="h4 fw-bold mb-3">Fast Delivery</h3>
                                <p class="text-muted">Get your products delivered quickly with our reliable shipping
                                    partners and real-time tracking.</p>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="feature-card">
                                <div class="feature-icon">
                                    <i class="fas fa-star"></i>
                                </div>
                                <h3 class="h4 fw-bold mb-3">Quality Products</h3>
                                <p class="text-muted">Discover carefully curated products from verified sellers with
                                    authentic reviews from real customers.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Statistics Section -->
            <section style="background: var(--secondary-color); padding: 4rem 0;">
                <div class="container">
                    <div class="row text-center">
                        <div class="col-md-3 col-sm-6 mb-4">
                            <div class="stat-item">
                                <h2 class="display-4 fw-bold" style="color: var(--primary-color);">10K+</h2>
                                <p class="h5 text-muted">Happy Customers</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-4">
                            <div class="stat-item">
                                <h2 class="display-4 fw-bold" style="color: var(--primary-color);">5K+</h2>
                                <p class="h5 text-muted">Products Available</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-4">
                            <div class="stat-item">
                                <h2 class="display-4 fw-bold" style="color: var(--primary-color);">500+</h2>
                                <p class="h5 text-muted">Trusted Sellers</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-4">
                            <div class="stat-item">
                                <h2 class="display-4 fw-bold" style="color: var(--primary-color);">99%</h2>
                                <p class="h5 text-muted">Customer Satisfaction</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Call to Action Section -->
            <section style="background: var(--gradient-secondary); padding: 5rem 0; color: white;">
                <div class="container text-center">
                    <h2 class="display-4 fw-bold mb-4">Ready to Start Shopping?</h2>
                    <p class="lead mb-4">Join thousands of satisfied customers and discover your next favorite product
                        today!</p>

                    <% if(currentUser) { %>
                        <a href="/products" class="btn btn-light btn-lg">
                            <i class="fas fa-shopping-cart me-2"></i>Browse Products
                        </a>
                        <% } else { %>
                            <div class="d-flex gap-3 justify-content-center flex-wrap">
                                <a href="/register" class="btn btn-light btn-lg">
                                    <i class="fas fa-user-plus me-2"></i>Create Account
                                </a>
                                <a href="/login" class="btn btn-outline-light btn-lg">
                                    <i class="fas fa-sign-in-alt me-2"></i>Sign In
                                </a>
                            </div>
                            <% } %>
                </div>
            </section>

            <!-- Footer -->
            <footer style="background: #1f2937; color: #f8fafc; padding: 4rem 0 2rem 0; margin-top: 0;">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <h3 class="fw-bold mb-3" style="color: #ffffff;">
                                <i class="fas fa-shopping-bag me-2" style="color: #6366f1;"></i>ShopEase
                            </h3>
                            <p style="color: #d1d5db; line-height: 1.6;">
                                Your trusted partner for online shopping. Discover, shop, and enjoy
                                the best products from around the world with confidence and ease.
                            </p>
                            <div class="mt-3">
                                <span class="badge" style="background: #6366f1; color: white; padding: 8px 16px; border-radius: 20px;">
                                    <i class="fas fa-star me-1"></i>Trusted by 10,000+ customers
                                </span>
                            </div>
                        </div>
                        <div class="col-md-3 mb-4">
                            <h5 class="fw-bold mb-3" style="color: #ffffff;">Quick Links</h5>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <a href="/" class="text-decoration-none footer-link" style="color: #d1d5db; transition: color 0.3s ease;">
                                        <i class="fas fa-home me-2"></i>Home
                                    </a>
                                </li>
                                <% if(currentUser) { %>
                                    <li class="mb-2">
                                        <a href="/products" class="text-decoration-none footer-link" style="color: #d1d5db; transition: color 0.3s ease;">
                                            <i class="fas fa-th-large me-2"></i>Products
                                        </a>
                                    </li>
                                    <li class="mb-2">
                                        <a href="/user/cart" class="text-decoration-none footer-link" style="color: #d1d5db; transition: color 0.3s ease;">
                                            <i class="fas fa-shopping-cart me-2"></i>Cart
                                        </a>
                                    </li>
                                <% } else { %>
                                    <li class="mb-2">
                                        <a href="/register" class="text-decoration-none footer-link" style="color: #d1d5db; transition: color 0.3s ease;">
                                            <i class="fas fa-user-plus me-2"></i>Sign Up
                                        </a>
                                    </li>
                                    <li class="mb-2">
                                        <a href="/login" class="text-decoration-none footer-link" style="color: #d1d5db; transition: color 0.3s ease;">
                                            <i class="fas fa-sign-in-alt me-2"></i>Login
                                        </a>
                                    </li>
                                <% } %>
                            </ul>
                        </div>
                        <div class="col-md-3 mb-4">
                            <h5 class="fw-bold mb-3" style="color: #ffffff;">Connect With Us</h5>
                            <div class="d-flex gap-3 mb-3">
                                <a href="#" class="social-link" style="color: #d1d5db; font-size: 1.5rem; transition: all 0.3s ease;">
                                    <i class="fab fa-facebook"></i>
                                </a>
                                <a href="#" class="social-link" style="color: #d1d5db; font-size: 1.5rem; transition: all 0.3s ease;">
                                    <i class="fab fa-twitter"></i>
                                </a>
                                <a href="#" class="social-link" style="color: #d1d5db; font-size: 1.5rem; transition: all 0.3s ease;">
                                    <i class="fab fa-instagram"></i>
                                </a>
                                <a href="#" class="social-link" style="color: #d1d5db; font-size: 1.5rem; transition: all 0.3s ease;">
                                    <i class="fab fa-linkedin"></i>
                                </a>
                            </div>
                            <div>
                                <p class="small mb-2" style="color: #d1d5db;">
                                    <i class="fas fa-envelope me-2"></i>support@shopease.com
                                </p>
                                <p class="small mb-0" style="color: #d1d5db;">
                                    <i class="fas fa-phone me-2"></i>+1 (555) 123-4567
                                </p>
                            </div>
                        </div>
                    </div>
                    <hr style="border-color: #374151; margin: 2rem 0;">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <p class="mb-0" style="color: #9ca3af; font-size: 0.9rem;">
                                &copy; 2025 ShopEase. All rights reserved.
                            </p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <div class="d-flex justify-content-md-end justify-content-start gap-3 mt-2 mt-md-0">
                                <a href="#" class="text-decoration-none" style="color: #9ca3af; font-size: 0.9rem;">Privacy Policy</a>
                                <a href="#" class="text-decoration-none" style="color: #9ca3af; font-size: 0.9rem;">Terms of Service</a>
                                <a href="#" class="text-decoration-none" style="color: #9ca3af; font-size: 0.9rem;">Support</a>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>

            <style>
                .footer-link:hover {
                    color: #6366f1 !important;
                    transform: translateX(5px);
                }
                
                .social-link:hover {
                    color: #6366f1 !important;
                    transform: translateY(-2px);
                }
                
                footer {
                    position: relative;
                    z-index: 1;
                }
                
                /* Ensure footer is visible on all screen sizes */
                @media (max-width: 768px) {
                    footer {
                        padding: 3rem 0 1.5rem 0;
                    }
                    
                    footer .col-md-6,
                    footer .col-md-3 {
                        text-align: center;
                    }
                    
                    footer .d-flex.gap-3 {
                        justify-content: center;
                    }
                }
            </style>