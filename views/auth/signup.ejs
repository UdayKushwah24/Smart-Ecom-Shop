<% layout('layouts/boilerplate.ejs') %>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg border-0 mt-5" style="border-radius: 20px;">
                    <div class="card-body p-5">
                        <%- include('../partials/flash') %>
                        
                        <div class="text-center mb-4">
                            <h1 class="display-6 fw-bold" style="background: var(--gradient-primary); -webkit-background-clip: text; background-clip: text; -webkit-text-fill-color: transparent;">Join Us Today</h1>
                            <p class="text-muted">Create your account to get started</p>
                        </div>
                        
                        <form action="/register" method="post">
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" class="form-control" name="username" id="username"
                                    placeholder="Choose a username" required>
                            </div>
                            
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" name="email" id="email" 
                                    placeholder="Enter your email" required>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Account Type</label>
                                <div class="row g-2">
                                    <div class="col-6">
                                        <div class="form-check p-3 border rounded" style="border-radius: 12px !important;">
                                            <input type="radio" class="form-check-input" name="role" value="buyer" id="buyer" required>
                                            <label for="buyer" class="form-check-label fw-medium">
                                                <i class="fas fa-shopping-bag me-2"></i>Buyer
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-check p-3 border rounded" style="border-radius: 12px !important;">
                                            <input type="radio" class="form-check-input" name="role" value="seller" id="seller" required>
                                            <label for="seller" class="form-check-label fw-medium">
                                                <i class="fas fa-store me-2"></i>Seller
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label for="pass" class="form-label">Password</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" name="password" id="pass"
                                        placeholder="Create a strong password" required>
                                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 mb-3">
                                <i class="fas fa-user-plus me-2"></i>Create Account
                            </button>
                            
                            <div class="text-center">
                                <p class="text-muted">Already have an account? 
                                    <a href="/login" class="text-decoration-none fw-bold" style="color: var(--primary-color);">Sign In</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div> 

    