<% layout('layouts/boilerplate') %>
    <%- include('../partials/navbar') %>
        <%- include('../partials/flash') %>

            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6">
                        <div class="text-center py-5">
                            <!-- Success Animation -->
                            <div class="success-animation mb-4">
                                <div class="checkmark-wrapper">
                                    <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
                                        <circle class="checkmark__circle" cx="26" cy="26" r="25" fill="none" />
                                        <path class="checkmark__check" fill="none" d="m14.1 27.2l7.1 7.2 16.7-16.8" />
                                    </svg>
                                </div>
                            </div>

                            <h1 class="display-4 fw-bold text-success mb-3">Payment Successful!</h1>
                            <p class="lead text-muted mb-4">
                                Thank you for your purchase. Your order has been successfully placed and will be
                                processed shortly.
                            </p>

                            <!-- Order Details Card -->
                            <div class="card shadow border-0 mb-4" style="border-radius: 20px;">
                                <div class="card-body p-4">
                                    <h5 class="card-title mb-3">
                                        <i class="fas fa-receipt me-2 text-primary"></i>Order Confirmation
                                    </h5>
                                    <div class="row text-center">
                                        <div class="col-md-4 mb-3">
                                            <div class="text-muted small">Order Number</div>
                                            <div class="fw-bold">#ORD-<%= Math.floor(Math.random() * 100000) %>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <div class="text-muted small">Order Date</div>
                                            <div class="fw-bold">
                                                <%= new Date().toLocaleDateString() %>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <div class="text-muted small">Estimated Delivery</div>
                                            <div class="fw-bold">3-5 Business Days</div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Next Steps -->
                            <div class="card shadow border-0 mb-4" style="border-radius: 20px;">
                                <div class="card-body p-4">
                                    <h5 class="card-title mb-3">
                                        <i class="fas fa-info-circle me-2 text-info"></i>What's Next?
                                    </h5>
                                    <div class="row">
                                        <div class="col-md-4 mb-3">
                                            <div class="d-flex flex-column align-items-center">
                                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mb-2"
                                                    style="width: 50px; height: 50px;">
                                                    <i class="fas fa-envelope"></i>
                                                </div>
                                                <div class="text-center">
                                                    <div class="fw-bold small">Email Confirmation</div>
                                                    <div class="text-muted small">Sent to your registered email</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <div class="d-flex flex-column align-items-center">
                                                <div class="rounded-circle bg-warning text-white d-flex align-items-center justify-content-center mb-2"
                                                    style="width: 50px; height: 50px;">
                                                    <i class="fas fa-box"></i>
                                                </div>
                                                <div class="text-center">
                                                    <div class="fw-bold small">Order Processing</div>
                                                    <div class="text-muted small">We'll prepare your items</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <div class="d-flex flex-column align-items-center">
                                                <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center mb-2"
                                                    style="width: 50px; height: 50px;">
                                                    <i class="fas fa-shipping-fast"></i>
                                                </div>
                                                <div class="text-center">
                                                    <div class="fw-bold small">Shipping</div>
                                                    <div class="text-muted small">Track your package</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex gap-3 justify-content-center flex-wrap">
                                <a href="/products" class="btn btn-primary btn-lg">
                                    <i class="fas fa-shopping-bag me-2"></i>Continue Shopping
                                </a>
                                <a href="#" class="btn btn-outline-primary btn-lg">
                                    <i class="fas fa-eye me-2"></i>Track Order
                                </a>
                            </div>

                            <!-- Customer Support -->
                            <div class="mt-5 pt-4 border-top">
                                <p class="text-muted small mb-2">Need help with your order?</p>
                                <div class="d-flex gap-3 justify-content-center flex-wrap">
                                    <a href="#" class="text-decoration-none">
                                        <i class="fas fa-phone me-1"></i>Call Support
                                    </a>
                                    <a href="#" class="text-decoration-none">
                                        <i class="fas fa-envelope me-1"></i>Email Us
                                    </a>
                                    <a href="#" class="text-decoration-none">
                                        <i class="fas fa-comments me-1"></i>Live Chat
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <style>
                .success-animation {
                    margin: 2rem 0;
                }

                .checkmark-wrapper {
                    width: 100px;
                    height: 100px;
                    margin: 0 auto;
                }

                .checkmark {
                    width: 100px;
                    height: 100px;
                    border-radius: 50%;
                    display: block;
                    stroke-width: 2;
                    stroke: #28a745;
                    stroke-miterlimit: 10;
                    box-shadow: inset 0px 0px 0px #28a745;
                    animation: fill .4s ease-in-out .4s forwards, scale .3s ease-in-out .9s both;
                }

                .checkmark__circle {
                    stroke-dasharray: 166;
                    stroke-dashoffset: 166;
                    stroke-width: 2;
                    stroke-miterlimit: 10;
                    stroke: #28a745;
                    fill: none;
                    animation: stroke 0.6s cubic-bezier(0.65, 0, 0.45, 1) forwards;
                }

                .checkmark__check {
                    transform-origin: 50% 50%;
                    stroke-dasharray: 48;
                    stroke-dashoffset: 48;
                    animation: stroke 0.3s cubic-bezier(0.65, 0, 0.45, 1) 0.8s forwards;
                }

                @keyframes stroke {
                    100% {
                        stroke-dashoffset: 0;
                    }
                }

                @keyframes scale {

                    0%,
                    100% {
                        transform: none;
                    }

                    50% {
                        transform: scale3d(1.1, 1.1, 1);
                    }
                }

                @keyframes fill {
                    100% {
                        box-shadow: inset 0px 0px 0px 30px #28a745;
                    }
                }

                .card {
                    transition: transform 0.2s ease;
                }

                .card:hover {
                    transform: translateY(-2px);
                }
            </style>